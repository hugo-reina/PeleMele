<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#959393"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/txt_bjr"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Page d'accueil"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_bjr"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#FF9800"
            android:text="BONJOUR" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_photo"
                android:layout_width="207dp"
                android:layout_height="60dp"
                android:backgroundTint="#3F51B5"
                android:text="PHOTO" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#2196F3"
                android:enabled="false"
                android:text="Voir Image" />
        </TableRow>

        <Button
            android:id="@+id/btn_chrono"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#4CAF50"
            android:text="CHRONOMETRE" />

        <Button
            android:id="@+id/btn_long"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#D772E8"
            android:text="Long Activity" />

        <Button
            android:id="@+id/btn_meteo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#39AEDC"
            android:text="MetÃ©o" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_contact"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="Contact" />

            <Button
                android:id="@+id/btn_capteur"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:text="Capteur" />
        </TableRow>

        <Button
            android:id="@+id/btn_Select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D39F9F"
            android:text="Select image" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>